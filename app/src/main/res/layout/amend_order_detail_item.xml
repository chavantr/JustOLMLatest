<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <LinearLayout
                android:id="@+id/lnrQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="100">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/lblPrescribeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="60"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryTitle"
                    android:textStyle="bold" />


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="30"
                    android:gravity="top"
                    android:text="Quantity :"
                    android:textColor="@color/colorPrimaryTitle"
                    android:textStyle="bold" />


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txtQty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"

                    android:layout_weight="10"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Qty"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="@color/colorPrimaryTitle" />

            </LinearLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lblSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrQty"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:text="Schedule : Weekly"
                android:textColor="@color/colorPrimaryTitle"
                android:textStyle="bold" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lblPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblSchedule"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:text="Period : 1"
                android:textColor="@color/colorPrimaryTitle"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgDeleteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/delete_icon" />


        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>